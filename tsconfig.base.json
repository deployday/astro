{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "jest"],
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "paths": {
      "astro-copy": ["packages/astro-copy/src/index.ts"],
      "astro-responsive-image": ["packages/astro-responsive-image/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
